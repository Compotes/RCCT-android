<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="155dp"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/connectLoshalo"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="connect Ferques"/>
                <Button
                    android:id="@+id/connectFerques"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="connect Vajda Loshalo"/>
                <SeekBar
                    android:id="@+id/seekBarH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seekBarS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seekBarV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:id="@+id/first"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="first color scheme" />

                    <RadioButton
                        android:id="@+id/second"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="second color scheme" />
                    <RadioButton
                        android:id="@+id/third"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="third color scheme" />
                </RadioGroup>


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:id="@+id/firstColor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="first color" />

                    <RadioButton
                        android:id="@+id/secondColor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="second color" />

                    <RadioButton
                        android:id="@+id/thirdColor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="third color"/>
                </RadioGroup>

                <CheckBox
                    android:id="@+id/showScale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="show scale"/>

                <SeekBar
                    android:id="@+id/seekBarScaleH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seekBarScaleS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seekBarScaleV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />
                <Button
                    android:id="@+id/go"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:text="GO!"/>

                <Button
                    android:id="@+id/kick"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:text="ÄŒik"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:text="Ze by to nekikalo
"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/color_blob_detection_activity_surface_view" />

</LinearLayout>
